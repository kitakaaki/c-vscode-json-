{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active file (Linux g++)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++23",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
